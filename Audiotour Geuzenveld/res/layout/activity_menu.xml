<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:gravity="center"
    android:orientation="vertical"
	android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/start"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@drawable/but1top"
        android:onClick="onStartClick"
        android:text="Audiotour"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/instructions"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@drawable/but1"
        android:onClick="onInstructionClick"
        android:text="Instructies"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/delen"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@drawable/but1"
        android:onClick="onDelenClick"
        android:text="Delen"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/colofon"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@drawable/but1down"
        android:onClick="onColofonClick"
        android:text="Colofon"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:typeface="normal" />

</LinearLayout>